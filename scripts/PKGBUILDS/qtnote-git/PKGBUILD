pkgname=qtnote-git
pkgver=3.1.0.33.g85f30cf
pkgrel=1
pkgdesc="Note-taking application written with Qt in mind"
arch=('i686' 'x86_64')
url="http://ri0n.github.io/QtNote"
license=('GPL3')
depends=('qt5-base' 'qt5-tools' 'hunspell')
makedepends=('git' 'cmake')
optdepends=('kglobalaccel' 'kwindowsystem' 'knotifications')
conflicts=(qtnote)
source=("$pkgname"::git://github.com/Ri0n/QtNote.git)
sha256sums=('SKIP')

pkgver() {
  cd "$srcdir/$pkgname"
  # Use the tag of the last commit
  git describe --long --tags | sed 's/^v//;s/-/./g'
}

prepare() {
    cd $pkgname
    git submodule init
    git submodule update
}

build() {
  # BUILD HERE
  cmake_flags="-DCMAKE_INSTALL_PREFIX=/usr"
  mkdir -p $srcdir/$pkgname/build && cd $srcdir/$pkgname/build
  cmake ${cmake_flags} ..
  cmake --build . --target all
}

package() {
  cd "$srcdir/$pkgname/build"
  make DESTDIR="$pkgdir"  install
}
