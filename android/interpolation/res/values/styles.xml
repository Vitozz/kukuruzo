<?xml version="1.0" encoding="utf-8"?>
<resources>
<style name="edit_cell" parent="@android:Widget.EditText">
	<item name="android:layout_width">wrap_content</item> 
	<item name="android:layout_height">fill_parent</item>
	<item name="android:layout_gravity">center_vertical|center_horizontal</item> 
	<item name="android:inputType">numberDecimal</item> 
	<item name="android:selectAllOnFocus">true</item>
	<item name="android:minWidth">@dimen/edit_width</item>
	<item name="android:text">@string/def_value</item> 
</style>
<style name="radio_button" parent="@android:Widget.CompoundButton.RadioButton">
	<item name="android:layout_width">wrap_content</item> 
	<item name="android:layout_height">wrap_content</item> 
</style>
<style name="answer_cell" parent="@android:Widget.EditText">
	<item name="android:layout_width">fill_parent</item>
	<item name="android:layout_height">fill_parent</item> 
	<item name="android:inputType">none</item> 
	<item name="android:cursorVisible">false</item>
	<item name="android:focusable">false</item>
	<item name="android:focusableInTouchMode">false</item>
	<item name="android:selectAllOnFocus">true</item>
	<item name="android:textColor">@color/red</item>
	<item name="android:textStyle">bold</item>
	<item name="android:minWidth">@dimen/edit_width</item>
	<item name="android:layout_gravity">center_vertical|center_horizontal</item>
</style>
<style name="text_view" parent="@android:Widget.TextView">
	<item name="android:layout_width">wrap_content</item> 
	<item name="android:layout_height">wrap_content</item> 
	<item name="android:layout_gravity">center_vertical|center_horizontal</item>
	<item name="android:textSize">14sp</item>
</style>
<style name="table_row">
	<item name="android:layout_width">wrap_content</item> 
	<item name="android:layout_height">wrap_content</item> 
	<item name="android:baselineAligned">true</item>
	<item name="android:paddingTop">@dimen/std_padding</item> 
	<item name="android:paddingBottom">@dimen/std_padding</item>
</style>
<style name="title_style">
	<item name="android:textSize">16sp</item>
	<item name="android:textStyle">bold</item>
	<item name="android:textColor">@color/white</item>
	<item name="android:background">@color/dk_grey</item>
	<item name="android:layout_height">wrap_content</item>
	<item name="android:layout_width">fill_parent</item> 
	<item name="android:paddingTop">@dimen/std_padding</item> 
	<item name="android:paddingBottom">@dimen/std_padding</item> 
</style>
<dimen name="edit_width">100dip</dimen>
<dimen name="std_padding">5dip</dimen>
</resources>
